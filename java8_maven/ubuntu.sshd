FROM ubuntu:latest

ARG PASSWD=${SSH_PASSWD}

RUN apt-get update && apt-get install -y openssh-server sudo vim
RUN useradd -m docker; echo "docker:$PASSWD" | chpasswd; \
	chown -R docker:docker /home/docker; \	
	usermod -s /bin/bash -aG sudo,admin docker; \
	echo "America/New_York" > /etc/timezone; \
	mkdir -p /var/run/sshd; 

USER docker

EXPOSE 22
CMD ["/usr/sbin/sshd", "-D"]
